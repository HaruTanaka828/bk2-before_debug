<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<div class="container">
    <div class="row">

<div class="col-xs-12">


<header>
<div class="header-title">
    <h1>Bookers</h1>
</div>

<div class="header-list">

    <% if user_signed_in? %>

<button type="button" class="btn btn-link"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>
<%= link_to "Home", user_path(current_user.id) %>
</button>

<button type="button" class="btn btn-link"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
<%= link_to 'Users', users_path %>
</button>

<button type="button" class="btn btn-link"><span class="glyphicon glyphicon-book" aria-hidden="true"></span>
 <%= link_to 'Books', books_path %>
</button>

<button type="button" class="btn btn-link"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
<%= link_to "logout", destroy_user_session_path, method: :delete %>
</button>

    <% else %>

<button type="button" class="btn btn-link"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>
<%= link_to "Home", root_path %>
</button>

<button type="button" class="btn btn-link"><span class="glyphicon glyphicon-link" aria-hidden="true"></span>
<%= link_to "About", home_about_path %>
</button>

<button type="button" class="btn btn-link"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
<%= link_to "sign up", new_user_registration_path %>
</button>

<button type="button" class="btn btn-link"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
<%= link_to "login", new_user_session_path %>
</button>

    <% end %>
</div>


</header>
</div></div></div>


                                    <%= yield %>
<div class="container">
    <div class="row">

<div class="col-md-12">
<footer>
  <p>CopyRight Infratop.inc</p>
</footer>
</div></div></div>

  </body>
</html>

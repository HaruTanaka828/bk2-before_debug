<div class="container">
    <div class="row">

<div class="col-xs-3">

<h1>User info</h1>



<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>


<table class="table">

<tr>

<td>name</td>

<td><%= current_user.name %></td>

</tr>

<td>introduction</td>

<td><%= current_user.introduction %></td>

</tr>

</table>

<%= link_to edit_user_path(current_user) do %>
<button type="button" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
</button>
<% end %>

<h1>New book</h1>

<%= form_for(@book_new) do |f| %>

  <h4>Title</h4>

<div class="row">
  <div class="col-xs-12">
  <%= f.text_field :title, class:"form-control" %>
  </div>
</div>

  <h4>Opinion</h4>

<div class="row">
  <div class="col-xs-12">
    <div class="kuhaku">
  <%= f.text_area :body, class:"form-control" %>
</div>
  </div>
</div>

  <div>
  <%= f.submit "Create Book" ,class:"btn btn-block btn-primary"%>
  </div>

<% end %>


</div>

<div class="col-xs-9">

<h1>Users</h1>

<table class="table table-striped">
     <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
        </tr>
     </thead>
     <tbody>
        <% @users.each do |user| %>
            <tr>
                <td> <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
        <% end %>
     </tbody>
 </table>

</div>
</div>
</div>